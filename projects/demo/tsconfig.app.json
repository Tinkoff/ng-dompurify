{
    "extends": "../../tsconfig.json",
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "module": "es2020",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "target": "es5",
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2018", "dom"]
    },
    "files": ["src/main.ts", "src/polyfills.ts"],
    "include": ["**/*.d.ts"],
    "angularCompilerOptions": {
        "compilationMode": "full"
    }
}
